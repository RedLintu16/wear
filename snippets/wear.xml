<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Override major core platform components with Wear OS versions -->
  <remove-project name="platform/frameworks/base" />
  <remove-project name="platform/packages/apps/Settings" />
  <remove-project name="platform/packages/apps/Launcher3" />
  <remove-project name="platform/packages/modules/NeuralNetworks" />
  <remove-project name="platform/system/sepolicy" />

  <!-- Wear OS versions of the above -->
  <project name="platform/frameworks/base" path="frameworks/base" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />
  <project name="platform/packages/apps/Settings" path="packages/apps/Settings" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />
  <project name="platform/packages/apps/Launcher3" path="packages/apps/Launcher3" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />
  <project name="platform/packages/apps/SystemUI" path="packages/apps/SystemUI" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />
  <project name="platform/packages/modules/NeuralNetworks" path="packages/modules/NeuralNetworks" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />
  <project name="platform/system/sepolicy" path="system/sepolicy" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />

  <!-- Additional Wear-specific apps (optional) -->
  <project name="platform/packages/apps/WearConnectivity" path="packages/apps/WearConnectivity" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />
  <project name="platform/packages/apps/WearServices" path="packages/apps/WearServices" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />
  <project name="platform/packages/apps/WearHealthServices" path="packages/apps/WearHealthServices" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />

  <!-- HALs / hardware-specific code for wearables -->
  <project name="platform/hardware/google/wear" path="hardware/google/wear" remote="aosp" revision="android-wear-15.0.0-gpl_r3" />
</manifest>
